@import url("http://fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic")
@import url("http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300")


$box
  background-color rgba(#f5f5f5, 0.8)
  border-top 1px solid rgba(white, 0.8)
  box-shadow 0 2px 5px rgba(0, 0, 0, 0.4)
  border-radius 4px

$sink
  padding: 5px
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.2) inset
  border-radius 4px
  border 1px solid rgba(0, 0, 0, 0.15)
  border-bottom 1px solid white

#tvs-flow-editor

  @import "vendor/bootstrap"
  @import "vendor/material-design-iconic-font"
  @import "vendor/re-com"
  @import "vendor/codemirror"
  @import "vendor/cm-theme/monokai"

  font-family Segoe UI, Roboto, sans-serif
  font-size 14px
  font-weight 400
  line-height 1.42857143
  color rgba(68, 68, 68, 1.0)
  letter-spacing 0.002em
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

  @extend $box
  position fixed
  top 5%
  left 5%
  margin 0
  padding 5px
  width: 940px
  height: 800px
  max-width: calc(100% - 20px)
  max-height: calc(100% - 20px)
  box-sizing: border-box
  box-shadow 0 10px 20px rgba(0, 0, 0, 0.4)


  .level2
  .level1
    text-shadow: 0 1px 1px rgba(white, 0.8)


  .main-header
    user-select: none

    &:not(.fullscreen)
      cursor: grab


  .main-content
    @extend $sink
    padding-right 0
    background-color rgba(#ccc, 0.6)
    user-select: none


  .resize-drag
    position: absolute
    display: block
    right: 0
    bottom: 0
    width: 20px
    height: 20px
    cursor: nwse-resize
    border-radius 4px
    background: linear-gradient(to bottom right, rgba(0, 0, 0, 0) 50%, rgba(0, 0, 0, 0.2) 51%)


  .entity-component
  .process-component
    @extend $box
    margin 5px 0
    padding 10px

    pre
      margin 0


  .vis-network
    display flex
    flex-flow inherit
    flex 1 1 auto
    width 100%
    height 100%

    .vis-network-tooltip
      @extend $box
      position absolute
      display: block
      padding: 0 5px
      font-size 0.85em


  .graph-container
    position relative
    z-index 100
    background-color rgba(#fff, 0.8)
    border 1px solid rgba(0, 0, 0, 0.25)
    border-bottom 1px solid white
    box-shadow 0 1px 5px rgba(0, 0, 0, 0.4) inset
    border-radius 4px


  .graph-mode-selector
    position absolute
    top 5px
    right 5px
    z-index 1


  .context-menu
    @extend $box
    position: absolute
    padding: 5px 5px 10px


  .item-list
    @extend $sink


  .CodeMirror
    height auto
    max-width: 600px
    font-family "Source Code Pro", Monaco, Menlo, "Ubuntu Mono", Consolas, source-code-pro, monospace
    line-height 1.5
    font-size 15px
    border-radius 4px
